<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-3">All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
      <% else %>
        <p>All <%= Flat.count %> flats.</p>
      <% end %>
    </div>
  </div>

  <div class="row"> 
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card mb-2" style="min-width: 300px">
          <img src="https://source.unsplash.com/500x500/?<%= flat.name %>" class="card-img-top" alt="<%= flat.description %>" class="flat-card-image">
          <div class="card-body">
            <h4 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description[0..50] %>... <%= link_to 'read more', flat_path(flat) %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="fa-solid fa-euro-sign"></i>
              <%= flat.price_per_night %>
            </li>
            <li class="list-group-item">
              <i class="fa-solid fa-people-group"></i>
              <%= flat.number_of_guests %>
            </li>
          </ul>
          <div class="card-actions d-flex justify-content-around align-items-center">
            <%= link_to 'More info', flat_path(flat), class: 'btn btn-primary m-2' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-success m-1' %>
            <%= link_to 'Remove', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger m-1' %>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
